{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",                         // <- FALTA
    "moduleResolution": "bundler",          // <- recomendado con Angular 17+
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "paths": {
      "tabla-species": ["../ui-species-workspace/dist/tabla-species"],
      "mapa-maplibre": ["../ui-species-workspace/dist/mapa-maplibre"],
      "region-selector": ["../ui-species-workspace/dist/region-selector"],
      "taxon-selector": ["../ui-species-workspace/dist/taxon-selector"],
      "taxon-navigator": ["../ui-species-workspace/dist/taxon-navigator"],
      "taxon-shared": ["../ui-species-workspace/dist/taxon-shared"],
      "taxon-scope": ["../ui-species-workspace/dist/taxon-scope"],
      "histogram-chart": ["../ui-species-workspace/dist/histogram-chart"]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.spec.json" }
  ]
}
